<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWordActivity"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView android:src="@drawable/logo_transparent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="30dp"  >


                <EditText
                    android:id="@+id/startWith"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"

                    android:padding="@dimen/padding"
                    android:inputType="textCapCharacters"
                    android:hint="Start With"
                    android:paddingLeft="@dimen/padding_from_left"
                    android:singleLine="true" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout2"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="10dp"          >
                <EditText
                    android:id="@+id/word"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"
                    android:padding="@dimen/padding"
                    android:hint="Word"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/padding_from_left" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout3"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/definition"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"
                    android:hint="Defination"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/padding"
                    android:paddingLeft="@dimen/padding_from_left"
                    android:singleLine="false" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout4"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/synonym"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"
                    android:padding="@dimen/padding"
                    android:hint="Synonym"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/padding_from_left" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout5"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/antonym"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"
                    android:padding="@dimen/padding"
                    android:hint="Antonym"
                    android:paddingLeft="@dimen/padding_from_left"
                    android:inputType="textCapWords"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout6"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/editImage"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/example"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/margin_horizontal"
                    android:hint="Example"
                    android:paddingLeft="@dimen/padding_from_left"
                    android:padding="@dimen/padding"
                    android:inputType="textCapSentences"
                    android:singleLine="false" />


            </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/addbtn"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"
                    android:text="Add"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>





        </LinearLayout>

    </ScrollView>


</RelativeLayout>